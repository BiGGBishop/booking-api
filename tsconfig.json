{
  "compilerOptions": {
    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language and Module settings */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* Node.js support */
    "lib": ["ES2020"],
    "types": ["node"],

    /* Decorators (needed for TypeORM) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Other useful options */
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
